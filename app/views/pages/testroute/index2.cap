@import User from '../User'

@def TestRouteContainer
  <div id="test-route-container">
    <yield />
  </div>
@end

@def MyContainer $children
  <div>
    @each $child in $children
      <div class="user">
        %{ $child }
      </div>
    @end
  </div>
@end

@def TestComponent $data
  <yield
    num = "5"
    text= "Mundo"
    foo ='Bar'
    data=%{ $data }
    />
@end

@def Print $name
  <Fragment>
    %{ $name }
  </Fragment>
@end

@def Gara $datas
  <Fragment>
    <Print %{ $datas } />
  </Fragment>
@end

@def NarutoClone ...$props
  <h4>Props => %{ str($props) }</h4>
@end

@def Input ($name, $placeholder, ...$props)
  <input
    name=%{ 'input-' . $name }
    placeholder=%{ $placeholder ? $placeholder : $name }
    %{ $props }
    />
@end

@def Naruto ($title, ...$rest)
  <Fragment>
    <h1>NarutoTitle =>  %{ $title }</h1>

    <NarutoClone %{ $rest } />
  </Fragment>
@end

@def Users $users
  <ul>
    @each $user in $users
      <User datas=%{ $user } />
    @end
  </ul>
@end

