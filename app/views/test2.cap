@def MyForm
  <form method="post" action="/saveuser">
    <input
      name="user[name]"
      type="text"
      placeholder="Digite seu nome..!"
      />
    <br />

    <input
      name="user[email]"
      type="email"
      placeholder="Digite seu email..!"
      />
    <br />

    <input
      name="user[password]"
      type="password"
      placeholder="Digite sua senha..!"
      />
    <br />
    <br />

    <button type="submit">
      Create User
    </button>
  </form>
@end
